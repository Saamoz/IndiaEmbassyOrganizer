<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="contactBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>

        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>

        <item name="android:clickable">true</item>

        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>

    <style name="contactTextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="contactTextHead" parent="contactTextBase">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="contactTextBody" parent="contactTextBase">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0000C0</item>
    </style>
</resources>
